<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="5dp"
    android:background="@color/custom_neon"
    >

    <ListView
        android:id="@+id/add_room_lv"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@color/custom_neon">

    </ListView>

    <Button
        android:id="@+id/add_room_btn"
        android:layout_width="120dp"
        android:layout_height="50dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/custom_purple"
        android:text="Add Group"
        android:textColor="@color/custom_black" />

    <EditText
        android:id="@+id/add_room_et"
        android:layout_width="250dp"
        android:layout_height="50dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="125dp"
        android:layout_marginRight="125dp"
        android:layout_marginBottom="5dp"
        android:background="@color/custom_turquoise"
        android:ems="10"
        android:hint="Enter group name here..."
        android:inputType="textMultiLine"
        android:textColor="@color/custom_black" />


</RelativeLayout>